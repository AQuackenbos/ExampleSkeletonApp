<?php
if(!(php_sapi_name() === 'cli' || defined('STDIN')))
{
	exit;
}

function hide_term() {
    if (strtoupper(substr(PHP_OS, 0, 3)) !== 'WIN')
        system('stty -echo');
}
 
function restore_term() {
    if (strtoupper(substr(PHP_OS, 0, 3)) !== 'WIN')
        system('stty echo');
}
 
echo 'Enter password: ';
hide_term();
$password = rtrim(fgets(STDIN), PHP_EOL);
restore_term();